{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "nodejs@latest",
    "python@3.12"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true"
  },
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate"
    ],
    "scripts": {
      "install": [
        "./install.sh"
      ],
      "lint": [
        "./lint.sh"
      ],
      "test": [
        "./test.sh"
      ]
    }
  }
}
